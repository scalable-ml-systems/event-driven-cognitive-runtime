{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:fraud:events:SignalIngested:v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["signal_type", "account_id", "transaction_id", "amount_usd", "currency"],
  "properties": {
    "signal_type": { "type": "string", "const": "unusual_transfer" },
    "account_id": { "type": "string" },
    "transaction_id": { "type": "string" },
    "amount_usd": { "type": "number", "minimum": 0 },
    "currency": { "type": "string", "minLength": 3, "maxLength": 3 },
    "destination_country": { "type": "string", "minLength": 2, "maxLength": 2 },
    "device_id": { "type": "string" },
    "observations": { "type": "object" }
  }
}
